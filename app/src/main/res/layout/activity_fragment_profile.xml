    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/backprofile2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/avatardefult1"
            android:background="@drawable/profile_custom_avatar"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/ciAvatar"
            android:layout_marginStart="15dp">
              <TextView
                  android:id="@+id/tvProfileName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="30dp"
                  android:textColor="@color/black"
                  android:layout_marginTop="23dp"
                  android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
        <TextView
            android:id="@+id/clickDeThayDoiAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click để thay đổi ảnh "
            android:textColor="@color/black"
            android:textSize="11dp"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btnSetAvt"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:text="OK"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"/>

    </RelativeLayout>

