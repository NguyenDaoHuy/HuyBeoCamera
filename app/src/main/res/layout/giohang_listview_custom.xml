<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/custom_listsanpham"
    android:layout_margin="10dp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/anhSanPhamGioHang"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="3.7"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5.3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tenSanPhamGioHang"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/giaSanPhamGioHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnBot"
                android:layout_toEndOf="@+id/tvSL"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tvSoLuongListGioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_toEndOf="@+id/btnBot"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnThem"
                android:layout_toEndOf="@+id/tvSoLuongListGioHang"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/huySanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_cancel_24"
            android:background="@null"/>

    </RelativeLayout>


</LinearLayout>